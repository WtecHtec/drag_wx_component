/* pages/drag-page/index.wxss */

.drag_main {
    width: 100%;
    height: 100%;
    overflow-y: auto;
}
.drag_place {
    height: 0;
    transition: height 0.3s ease;
}

.drag_active {
 
    position: absolute;
    left: 0;
    right: 0;
    z-index: 9999;
}

.drag_active-dec {
    transform: scaleY(2);
    color: blue;
    /* border: 1px solid #ccc; */
}

.block1 {
    height: 120rpx;
    line-height: 60rpx;
    text-align: center;
    box-sizing: border-box;
    padding: 30rpx;
    background-color: bisque;
    margin-bottom: 14rpx;
}

.card{
    width: 90%;
    margin-left: 5%;
    height: 390rpx;
    background: rgb(226, 208, 208);
    border-radius: 10rpx;
    box-shadow: 5px 5px 5px #cdcfcf;
}
  