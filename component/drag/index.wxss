/* component/drag/index.wxss */

.drag_main {
    width: 100%;
    height: 100vh;
    overflow-y: auto;
}
.drag_place {
    height: 0;
    transition: height 0.3s ease;
}

.drag_active {
 
    position: absolute;
    left: 0;
    right: 0;
    z-index: 9999;
}

.drag_active-dec {
    transform: scaleY(1.2);
    color: blue;
    /* border: 1px solid #ccc; */
}